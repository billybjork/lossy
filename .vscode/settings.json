{
  // ElixirLS configuration - point to lossy subdirectory
  "elixirLS.projectDir": "lossy",
  "elixirLS.dialyzerEnabled": true,
  "elixirLS.fetchDeps": false,
  "elixirLS.suggestSpecs": true,

  // File associations
  "files.associations": {
    "*.html.heex": "phoenix-heex",
    "*.heex": "phoenix-heex"
  },

  // Editor settings
  "editor.formatOnSave": true,
  "editor.rulers": [100, 120],

  // Elixir formatting
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls",
    "editor.formatOnSave": true
  },

  // JavaScript/JSON formatting
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Files to exclude from search/watch
  "files.watcherExclude": {
    "**/_build": true,
    "**/deps": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.elixir_ls": true
  },

  "search.exclude": {
    "**/_build": true,
    "**/deps": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.elixir_ls": true
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["chrome", "@webgpu/types"]
  },
  "include": ["background/**/*", "content/**/*", "lib/**/*", "offscreen/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
